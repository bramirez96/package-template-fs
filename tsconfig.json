{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "lib": ["DOM"],
    "declaration": true,
    "declarationMap": false,
    "outDir": "./dist/types",
    "downlevelIteration": true,
    "strict": true,
    "alwaysStrict": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "allowJs": false
  },
  "include": ["./src/**/*"],
  "exclude": ["src/**/*.test.ts"]
}
